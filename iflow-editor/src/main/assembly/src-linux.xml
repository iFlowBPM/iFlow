<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/assembly-1.1.0-SNAPSHOT.xsd">
	<id>One-JAR-linux-x86</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<!-- Expand One-JAR classes -->
		<dependencySet>
			<outputDirectory/>
			<includes>
				<include>com.simontuffs:one-jar</include>
			</includes>
			<unpack>true</unpack>
			<unpackOptions>
				<excludes>
					<exclude>META-INF/MANIFEST</exclude>
				</excludes>
			</unpackOptions>
		</dependencySet>
		<!-- Include Flow Editor jar as 'main.jar' -->
		<dependencySet>
			<outputDirectory>main</outputDirectory>
			<outputFileNameMapping>main.jar</outputFileNameMapping>
			<includes>
				<include>${groupId}:${artifactId}</include>
			</includes>
		</dependencySet>
		<!-- Include system independent libraries, excluding One-JAR, Flow Editor and J2EE -->
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<scope>runtime</scope>
			<excludes>
				<exclude>com.simontuffs:one-jar</exclude>
				<exclude>${groupId}:${artifactId}</exclude>
				<exclude>javax.j2ee:j2ee</exclude>
			</excludes>
		</dependencySet>
		<!-- Include platform specific dependency: SWT -->
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>org.eclipse:swt:jar:gtk-linux-x86</include>
			</includes>
			<scope>provided</scope>
			<unpack>false</unpack>
		</dependencySet>
		<!-- Extract xulrunner.zip from system package into JAR root -->
		<dependencySet>
			<outputDirectory/>
			<includes>
				<include>org.mozilla:xulrunner:jar:linux</include>
			</includes>
			<scope>provided</scope>
			<unpack>true</unpack>
			<unpackOptions>
				<includes>
					<include>*.zip</include>
				</includes>
			</unpackOptions>
		</dependencySet>
		<!-- Extract SWT native libraries into JAR /binlib -->
		<dependencySet>
			<outputDirectory>binlib</outputDirectory>
			<includes>
				<include>org.eclipse:swt:jar:gtk-linux-x86</include>
			</includes>
			<scope>provided</scope>
			<unpack>true</unpack>
			<unpackOptions>
				<includes>
					<include>*.so</include>
				</includes>
			</unpackOptions>
		</dependencySet>
	</dependencySets>

	<!-- Include documentation files -->
	<fileSets>
		<fileSet>
			<directory>doc</directory>
			<outputDirectory>/doc</outputDirectory>
			<filtered>false</filtered> <!-- Do not filter files -->
			<useDefaultExcludes>true</useDefaultExcludes> <!-- Exclude CVS and Subversion metadata by default -->
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>RELEASE_NOTES.txt</source>
			<outputDirectory>/doc</outputDirectory>
			<filtered>false</filtered> <!-- Do not filter files -->
			<fileMode>644</fileMode>
		</file>
	</files>
	
</assembly>
